<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/purple"
            android:textAlignment="center"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bio"
            app:layout_constraintVertical_bias="0"
            app:menu="@menu/profile_nav_menu" />


        <FrameLayout
            android:id="@+id/FRAGMENT_PLACEHOLDER"
            android:layout_width="416dp"
            android:layout_height="526dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottomNavigationView2" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:text="Username"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ProfileImage" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ProfileImage"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:background="#00FFC107"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Circular"
            app:srcCompat="@drawable/ic_baseline_account_circle_24"
            app:strokeColor="#040404"
            app:strokeWidth="5dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/bio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Bio"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userName" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="68dp"
            android:layout_height="45dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="8dp"
            android:text="Personal Recipes"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ProfileImage"
            app:layout_constraintTop_toBottomOf="@+id/personalReci" />

        <TextView
            android:id="@+id/personalReci"
            android:layout_width="68dp"
            android:layout_height="21dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="50dp"
            android:text="0"
            android:textAlignment="center"

            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ProfileImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:text="Liked Recipes"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/likedReci" />

        <TextView
            android:id="@+id/likedReci"
            android:layout_width="60dp"
            android:layout_height="21dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:text="0"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/personalReci"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/editProfile"
            android:layout_width="181dp"
            android:layout_height="35dp"
            android:layout_marginStart="39dp"
            android:text="Edit Profile"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/ProfileImage"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>