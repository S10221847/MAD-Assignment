<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="1dp"
    android:layout_marginTop="1dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/purple"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ingredList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="13dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editRecipeDuration">

            <include
                layout="@layout/add_ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="522dp"></include>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/stepList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ingredList">

            <include
                layout="@layout/add_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="591dp"></include>

            <Button
                android:id="@+id/addStepsButton"
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:textStyle="bold"
                android:text="+"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/stepList"></Button>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cuisineList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="17dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stepList">

            <include
                layout="@layout/add_cuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="666dp"></include>

            <Button
                android:id="@+id/addCuisineButton"
                android:layout_width="48dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:textStyle="bold"
                android:text="+"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/cuisineList"></Button>

        </LinearLayout>

        <Button
            android:id="@+id/buttonImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="67dp"
            android:text="Choose image"
            app:layout_constraintStart_toEndOf="@+id/buttonCreateRecipe"
            app:layout_constraintTop_toBottomOf="@+id/cuisineList" />

        <Button
            android:id="@+id/buttonCreateRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="67dp"
            android:text="Create"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cuisineList" />

        <ImageView
            android:id="@+id/CreateImage"
            android:layout_width="246dp"
            android:layout_height="269dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/applogo" />

        <EditText
            android:id="@+id/editRecipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CreateImage" />

        <EditText
            android:id="@+id/editRecipeDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Description"
            android:inputType="textMultiLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editRecipeName" />

        <EditText
            android:id="@+id/editRecipeDuration"
            android:layout_width="123dp"
            android:layout_height="57dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:hint="Duration"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editRecipeDescription" />

        <EditText
            android:id="@+id/editRecipeServings"
            android:layout_width="138dp"
            android:layout_height="55dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:hint="Servings"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/editRecipeDuration"
            app:layout_constraintTop_toBottomOf="@+id/editRecipeDescription" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>